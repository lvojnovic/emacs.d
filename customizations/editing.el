;; use 4 spaces for tabs
(defun die-tabs ()
  (interactive)
  (set-variable 'tab-width 4)
  (mark-whole-buffer)
  (untabify (region-beginning) (region-end))
  (keyboard-quit))

;; fix weird os x kill error
(defun ns-get-pasteboard ()
  "Returns the value of the pasteboard, or nil for unsupported formats."
  (condition-case nil
      (ns-get-selection-internal 'CLIPBOARD)
    (quit nil)))

(setq electric-indent-mode nil)

(defun my-delete-trailing-whitespace-before-save ()
  "Ensure trailing whitespaces are deleted."
  (add-hook 'before-save-hook 'delete-trailing-whitespace))
(add-hook 'prog-mode-hook 'whitespace-mode)
(add-hook 'prog-mode-hook 'my-delete-trailing-whitespace-before-save)
(put 'upcase-region 'disabled nil)

;; permanently enable syntax checking with Flycheck
(add-hook 'after-init-hook #'global-flycheck-mode)

(global-set-key (kbd "<XF86HomePage>") 'text-scale-increase)
(global-set-key (kbd "<XF86Mail>") 'text-scale-decrease)
